<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    tools:context=".Instructions">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/instruction_gif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="385dp"
        android:scaleType="fitXY" />

    <Button
        android:id="@+id/play_audio"
        android:layout_width="215dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="345dp"
        android:background="@drawable/custom_button"
        android:drawableRight="@drawable/play_audio"
        android:gravity="center"
        android:paddingRight="10dp"
        android:text="Replay Voice"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <Button
        android:id="@+id/activity_complete"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="85dp"
        android:background="@drawable/custom_button"
        android:drawableRight="@drawable/next_activity_icon"
        android:gravity="center"
        android:paddingRight="15dp"
        android:text="Next"
        android:textSize="18dp" />

    <Button
        android:id="@+id/restart_activity"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/restart_button"
        android:gravity="center"
        android:text="Restart This Activity"
        android:drawableRight="@drawable/restart_activity_icon"
        android:paddingRight="15dp"
        android:textColor="@color/white"
        android:textSize="18dp"
       />

    <TextView
        android:id="@+id/instructions_text"
        android:layout_width="375dp"
        android:layout_height="193dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="145dp"
        android:textAllCaps="true"
        android:textColor="@color/primary_button"
        android:textSize="17dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/start_activity"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp"
        android:background="@drawable/start_button"
        android:gravity="center"
        android:text="Start"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/timed_activity_text"
        android:layout_width="340dp"
        android:layout_height="51dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="104dp"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@color/primary_button"
        android:textSize="18dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/start_ver"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-55dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/restart_button"
        android:gravity="center"
        android:text="Restart This Activity"
        android:drawableRight="@drawable/restart_activity_icon"
        android:paddingRight="15dp"
        android:textColor="@color/white"
        android:textSize="18dp"
        />


</RelativeLayout>